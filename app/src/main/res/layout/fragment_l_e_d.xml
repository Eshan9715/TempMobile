<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:background="@color/GWhite"
    tools:context=".LED">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ledOn"
                android:layout_width="100dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/light_on" />

            <ImageView
                android:id="@+id/ledOff"
                android:layout_width="100dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/light_off" />

            <TextView
                android:id="@+id/h_led"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ledOff"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="LED Bulb"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/l1"
                android:layout_margin="20dp"
                android:layout_below="@+id/h_led"
                circular:cardCornerRadius="15dp"
                android:elevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/tt1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@+id/temp_head11"
                        android:src="@drawable/light_on" />

                    <TextView
                        android:id="@+id/temp_head11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="left"
                        android:text="LED ON"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/l2"
                android:layout_margin="20dp"
                android:layout_below="@+id/l1"
                circular:cardCornerRadius="15dp"
                android:elevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/t12"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/temp_head12"
                        android:src="@drawable/light_off" />

                    <TextView
                        android:id="@+id/temp_head12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="left"
                        android:text="LED OFF"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

    </ScrollView>


</FrameLayout>